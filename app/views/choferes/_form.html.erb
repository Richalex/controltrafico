<%= form_for(@chofer, :url => choferes_path ,:html => {:role => 'form'}) do |f| %>
    <% if @chofer.errors.any? %>
        <%= pluralize(@chofer.errors.count, "Errores") %>
        <% @chofer.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>

<div class="right_col" role="main">
  <div class="row">
    <div class="row">
      <div class="col-md-12">
        <div class="x_panel">

          <div class="x_content">
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
            <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
            <form action="ServletChofers" method ="POST" name="formularioChofer" id="formChofer" >
              <div class="container">
                <div class="row">


                  <div class="container">
                    <div class="row">

                      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                        <div class="form-group"></div>
                        <label for=nombre>Nombres</label>
                        <%= f.text_field :nombres, class:'form-control'%>
                      </div>
                      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                        <div class="form-group"></div>
                        <label for=rut>Rut</label>
                        <%= f.text_field :rut , class:'form-control'%>
                      </div>
                      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                        <div class="form-group"></div>
                        <label for=apellidopate>Apellido Paterno</label>
                        <%= f.text_field :apellido_pat , class:'form-control'%>
                      </div>
                      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                        <div class="form-group"></div>
                        <label for=apellidomate>Apellido Materno</label>
                        <%= f.text_field :apellido_mat ,class:'form-control'%>
                      </div>
                      <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="form-group"></div>
                        <label for=fecha_ingreso>Fecha Ingreso</label>
                        <%= f.date_field :fecha_ingreso, class:'form-control', type:'date'%>
                      </div>


                      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                        <div class="form-group"></div>
                        <%= f.submit "Guardar" , class:'btn btn-primary' %>
                        <%= link_to 'AtrÃ¡s', choferes_path , class:'btn btn-danger' %>
                      </div>




                    </div>

                  </div>

                </div>

              </div>
            </form>

          </div>
        </div>



        <!-- /.modal-dialog -->
      </div>
    </div>
  </div>
</div>
<% end %>