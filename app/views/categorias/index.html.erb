<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">

      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listado Categorias
            <%= link_to 'Agregar Categoria', nueva_categoria_path,:class =>'btn bg-olive margin' %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Descripcion</th>
            </tr>
            </thead>
            <tbody>
            <% @categoria.each do |actual| %>
                <tr>
                  <td><%= actual.id%></td>
                  <td></td>
                  <td><%= actual.descripcion %></td>
                  <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  categoria_path(actual), class: 'btn btn-success' %></td>
                  <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_categoria_path(actual), class: 'btn btn-success' %></td>
                  <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, categorias_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
                </tr>
            <%end%>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->
<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>