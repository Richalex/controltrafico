<h1>Horarios#index</h1>
<p>Find me in app/views/horarios/index.html.erb</p>
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Horarios
      <%= link_to 'Agregar Periodo', nuevo_horario_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Dia</th>
        <th>Periodo</th>
        <th>Hora Inicio</th>
        <th>Hora Termino</th>
        <th>Mostrar</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
      </thead>
      <tbody>
      <% @horario.each do |actual| %>
          <tr>
            <td><%= actual.dia%></td>
            <td><%= actual.periodo %></td>
            <td><%= actual.hora_inicio %></td>
            <td><%= actual.hora_termino%></td>
            <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  horario_path(actual), class: 'btn btn-success' %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_horario_path(actual), class: 'btn btn-success' %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, horarios_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
          </tr>
      <%end%>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>