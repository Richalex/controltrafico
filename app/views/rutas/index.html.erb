<h1>Rutas#index</h1>
<p>Find me in app/views/rutas/index.html.erb</p>
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Rutas
      <%= link_to 'Agregar Ruta', nueva_ruta_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Descripcion</th>
        <th>Recorrido</th>
        <th>Empresa</th>
        <th>Horario</th>
        <th>Mostrar</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
      </thead>
      <tbody>
      <% @ruta.each do |actual| %>
          <tr>
            <td><%= actual.descripcion%></td>
            <td><%= actual.recorrido %></td>
            <td><%= actual.id_empresa %></td>
            <td><%= actual.id_horario %></td>
            <td><%= link_to 'Mostrar', ruta_path(actual) %> </td>
            <td><%= link_to 'Editar', editar_ruta_path(actual) %></td>
            <td><%= link_to 'Borrar', rutas_path(actual), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
          </tr>
      <%end%>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>