<h1>Empresas#index</h1>
<p>Find me in app/views/empresas/index.html.erb</p>
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Empresas
      <%= link_to 'Agregar Empresa', nueva_empresa_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Rut</th>
        <th>Nombre</th>
        <th>Rutas</th>
        <th>Mostrar</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
      </thead>
      <tbody>
      <% @empresa.each do |actual| %>
          <tr>
            <td><%= actual.rut%></td>
            <td><%= actual.nombre %></td>
            <td><%= actual.id_ruta %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  empresa_path(actual), class: 'btn btn-success' %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_empresa_path(actual), class: 'btn btn-success' %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, empresas_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
          </tr>
      <%end%>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>