<!-- Main content -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">

<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Asignaciones
      <td><button class="btn btn-primary" id="add" type="button"> <span class="texto" >Nueva Asignacion</span><span class="glyphicon glyphicon-refresh"></span></button></td>

  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Chofer</th>
        <th>Numero de Bus</th>
        <th>Empresa</th>
        <th>Recorrido</th>
        <th>Horario</th>
        <th>Guardar</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
      </thead>
      <tbody>
      <tr>

        <td><select class="selectpicker col-lg-12 col-sm-6 col-md-6 col-xs-12" data-live-search="true"><% @chofer.each do |actual| %><option><%= actual.rut+' '+actual.nombres %></option><%end%></select></td>
        <td><select class="selectpicker col-lg-12 col-sm-6 col-md-6 col-xs-12" data-live-search="true"><% @bus.each do |actual| %><option><%= actual.num_maquina %></option><%end%></select></td>
        <td><select class="selectpicker col-lg-12 col-sm-6 col-md-6 col-xs-12" data-live-search="true"></select></td>
        <td><select class="selectpicker col-lg-12 col-sm-6 col-md-6 col-xs-12" data-live-search="true"></select></td>
        <td><select class="selectpicker col-lg-12 col-sm-6 col-md-6 col-xs-12" data-live-search="true"></select></td>
        <td><%= link_to '<i class="glyphicon glyphicon-check"></i>'.html_safe,   class: 'btn btn-success' %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, class: 'btn btn-success' %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe,  class: 'btn btn-danger' %></td>
      </tr>
      </tbody>

    </table>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>

$(document).ready(function(){
 $("#add").on("click",function(){
  $clone=$("table tbody tr:first").clone();
  $clone.find("input").each(function(){
   $(this).val("");
  });
  $("table tbody").append($clone);
 });
});


$(document).ready(function() {
  $('#example1').DataTable({
    "language": {
      "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
    }
  });
});

    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>

