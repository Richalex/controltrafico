
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Asignaciones
      <%= link_to 'Agregar  Asignaciones', nuevo_bus_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Chofer</th>
        <th>Bus</th>
        <th>Empresa</th>
        <th>Ruta</th>
        <th>Horario</th>
        <th>Mostrar</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
      </thead>
      <tbody>
      <% @asignaciones.each do |actual| %>
          <tr>
            <td><%= actual.num_maquina%></td>
            <td><%= actual.placa_patente %></td>
            <td><%= actual.anio_vehiculo %></td>
            <td><%= actual.marca %></td>
            <td><%= actual.carroceria %></td>


            <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  bus_path(actual), class: 'btn btn-success' %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_bus_path(actual), class: 'btn btn-info' %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, buses_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
          </tr>
      <%end%>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

