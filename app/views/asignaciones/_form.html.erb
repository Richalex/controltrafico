<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
<%= form_for(@asignacion, :html => { class: 'form_dark' })  do |f|%>

    <div class="right_col" role="main">
      <div class="row">
        <div class="row">
          <div class="col-md-12">
            <div class="x_panel">

              <div class="x_content">
                <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
                <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

                <div class="container">
                  <div class="row">


                    <div class="container">
                      <div class="row">

                        <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                          <div class="form-group"></div>
                          <label for=bus> Conductor</label>
                          <%= select_tag "chofer", options_from_collection_for_select(@chofer, "id", "rut"), class: " selectpicker form-control", data: { 'live-search' => 'true' } , :include_blank => "Seleccione Chofer"  %>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                          <div class="form-group"></div>
                          <label for=conductor>Numero de Maquina</label>
                          <%= select_tag "Buses", options_from_collection_for_select(@bus, "id", "num_maquina"), class: " selectpicker form-control ", data: { 'live-search' => 'true' } , :include_blank => "Seleccione Bus"  %>
                        </div>
                          <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                          <div class="form-group"></div>
                          <label for=Empresa>Empresa</label>
                            <%= select_tag "Empresa", options_from_collection_for_select(@empresa, "id", "id"), class: " selectpicker form-control", data: { 'live-search' => 'true' } , :include_blank => "Seleccione Empresa"  %>
                          </div>
                        <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                          <div class="form-group"></div>
                          <label for=ruta> Ruta</label>
                          <%= select_tag "Ruta", options_from_collection_for_select(@ruta, "id", "id"), class: " selectpicker form-control", data: { 'live-search' => 'true' } , :include_blank => "Seleccione Ruta"  %>
                        </div>
                        <div class="col-lg-6 col-sm-12 col-md-12 col-xs-12">
                          <div class="form-group"></div>
                          <label for=horario>Horario</label>
                          <%= select_tag "Horario", options_from_collection_for_select(@horario, "id", "id"), class: " selectpicker form-control", data: { 'live-search' => 'true' } , :include_blank => "Seleccione Horario"  %>
                      </div>
                        <div class="col-lg-12 col-sm-6 col-md-6 col-xs-12">
                          <div class="form-group"></div>
                          <%= f.submit "Guardar" , class:'btn btn-primary' %>
                          <%= link_to 'AtrÃ¡s', asignaciones_path , class:'btn btn-danger' %>
                        </div>



                      </div>

                    </div>

                  </div>

                </div>


              </div>
            </div>



            <!-- /.modal-dialog -->
          </div>
        </div>
      </div>
    </div>









<%end%>
